<Application x:Class="WpfAppCvoca.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfAppCvoca"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/WpfAppCvoca;component/Styles/BaseStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- ========== TextBlock Styles ========== -->
            <Style x:Key="PageTitleText" TargetType="TextBlock">
                <!-- <Setter Property="FontSize" Value="16" /> -->
                <Setter Property="FontSize" Value="16" />
                <Setter Property="FontWeight" Value="SemiBold" />
                <Setter Property="Margin" Value="0,0,8,0" />
                <Setter Property="Foreground" Value="{Binding DataContext.Theme.ForegroundColor, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" />
            </Style>
            <Style x:Key="SectionTitleText" TargetType="TextBlock">
                <Setter Property="FontSize" Value="13" />
                <Setter Property="FontWeight" Value="SemiBold" />
                <Setter Property="Margin" Value="0,0,8,0" />
                <Setter Property="Foreground" Value="{Binding DataContext.Theme.ForegroundColor, RelativeSource={RelativeSource AncestorType=UserControl}}" />
            </Style>
            <Style x:Key="CaptionText" TargetType="TextBlock">
                <Setter Property="FontSize" Value="11" />
                <Setter Property="Margin" Value="0,0,4,0" />
                <Setter Property="Foreground" Value="{Binding DataContext.Theme.ForegroundColor, RelativeSource={RelativeSource AncestorType=UserControl}}" />
            </Style>

            <!-- ========== Panel Styles ========== -->
            <Style x:Key="ToolbarPanel" TargetType="StackPanel">
                <Setter Property="Orientation" Value="Horizontal" />
                <Setter Property="Margin" Value="0,0,0,8" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Right" />
            </Style>
            <Style x:Key="StatusbarPanel" TargetType="StackPanel">
                <Setter Property="Orientation" Value="Horizontal" />
                <Setter Property="Margin" Value="0,0,0,8" />
                <Setter Property="HorizontalAlignment" Value="Left" />
            </Style>

            <!-- ========== Button Styles ========== -->
            <Style x:Key="ToolbarBtn" BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
                <Setter Property="Margin" Value="0,0,8,4" /> BasedOn="{StaticResource {x:Type Button}}"
                <Setter Property="Padding" Value="12,2" />
                <Setter Property="Margin" Value="0,0,8,0" />
            </Style>
            <Style x:Key="StatusbarBtn" TargetType="Button">
                <Setter Property="Padding" Value="12,2" />
            </Style>

            <!-- ========== ComboBox Styles ========== -->
            <Style x:Key="ThemedComboBox" TargetType="ComboBox">
                <Setter Property="Margin" Value="4,0,8,0" />
                <Setter Property="Padding" Value="4,2" />
                <Setter Property="FontSize" Value="12" />
                <Setter Property="MinWidth" Value="80" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="Background" Value="{Binding DataContext.Theme.ComboBoxBackgroundColor, RelativeSource={RelativeSource AncestorType=Window}}" />
                <Setter Property="Foreground" Value="{Binding DataContext.Theme.ComboBoxForegroundColor, RelativeSource={RelativeSource AncestorType=Window}}" />
                <Setter Property="ItemContainerStyle">
                    <Setter.Value>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Background" Value="{Binding DataContext.Theme.ComboBoxBackgroundColor, RelativeSource={RelativeSource AncestorType=Window}}" />
                            <Setter Property="Foreground" Value="{Binding DataContext.Theme.ComboBoxForegroundColor, RelativeSource={RelativeSource AncestorType=Window}}" />
                            <Setter Property="Padding" Value="4,2" />
                        </Style>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- ========== Grid Styles ========== -->
            <Style x:Key="MainGrid" TargetType="Grid">BasedOn="{StaticResource {x:Type Grid}}"
                <Setter Property="Margin" Value="0,0,0,8" />
            </Style>
            <Style x:Key="TitlebarGrid" TargetType="Grid">BasedOn="{StaticResource {x:Type Grid}}"
                <Setter Property="Height" Value="30" />
            </Style>
            <Style x:Key="SubGrid" TargetType="Grid">BasedOn="{StaticResource {x:Type Grid}}"
                <Setter Property="Margin" Value="0,0,0,8" />
            </Style>

            <!-- ========== Border Styles ========== -->
            <Style x:Key="TitlebarBorder" BasedOn="{StaticResource {x:Type Border}}" TargetType="Border">
                <Setter                Property="Padding" Value="1"/>
                <Setter Property="BorderThickness" Value="0,0,0,1" />
                <Setter Property="BorderBrush" Value="{Binding DataContext.Theme.BorderColor, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" />
                <Setter Property="Background" Value="{Binding DataContext.Theme.SecondaryBackgroundColor, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" />
            </Style>

            <!-- ========== DataGrid Styles ========== -->
            <Style x:Key="SubDataGrid" TargetType="DataGrid">BasedOn="{StaticResource {x:Type DataGrid}}"
                <Setter Property="Margin" Value="0,0,0,8" />
                <Setter Property="IsReadOnly" Value="False" />
            </Style>
            <Style x:Key="SubDataGridTextColumn" TargetType="DataGridTextColumn">
                <Setter Property="IsReadOnly" Value="True" />
                <Setter Property="ElementStyle" Value="{StaticResource DataGridTextColumnElementStyle}" />
                <Setter Property="EditingElementStyle" Value="{StaticResource DataGridTextColumnEditingElementStyle}" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>