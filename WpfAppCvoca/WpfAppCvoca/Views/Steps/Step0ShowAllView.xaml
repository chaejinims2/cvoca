<UserControl x:Class="WpfAppCvoca.Views.Steps.Step0ShowAllView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Style="{StaticResource ToolbarPanel}">
            <TextBlock Text="{Binding StepHeaderText}"
                    Style="{StaticResource SectionTitleText}"
                    Foreground="{Binding Theme.ForegroundColor}" />
            <Border Width="12" />
            <Button Content="Play Audio"
                    Command="{Binding PlayCommand}"
                    Background="{Binding Theme.ButtonBackgroundColor}"
                    Foreground="{Binding Theme.ButtonForegroundColor}" />
            <Button Content="Stop"
                    Command="{Binding StopCommand}"
                    Background="{Binding Theme.ButtonBackgroundColor}"
                    Foreground="{Binding Theme.ButtonForegroundColor}" />
        </StackPanel>

        <DataGrid x:Name="SpellingDataGrid" Grid.Row="1"
                ItemsSource="{Binding SpellingItems}"
                Background="{Binding Theme.DataGridBackgroundColor}"
                Foreground="{Binding Theme.DataGridForegroundColor}"
                RowBackground="{Binding Theme.DataGridRowBackgroundColor}"
                AlternatingRowBackground="{Binding Theme.DataGridRowBackgroundColor}">
            <DataGrid.Resources>
                <!-- Row만 살짝 커스텀 -->
                <Style TargetType="DataGridRow">
                    <Setter Property="Padding" Value="6,0" />
                    <Setter Property="BorderThickness" Value="0,0,0,1" />
                    <Setter Property="BorderBrush"
                            Value="{Binding DataContext.Theme.BorderColor, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background"
                                    Value="{Binding DataContext.Theme.AccentColor, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                            <Setter Property="Foreground" Value="White" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
                <!-- ColumnHeader는 기본값에 색만 바인딩 -->
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background"
                            Value="{Binding DataContext.Theme.DataGridHeaderBackgroundColor, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                    <Setter Property="Foreground"
                            Value="{Binding DataContext.Theme.DataGridHeaderForegroundColor, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Word ID" Width="70" Binding="{Binding WordId}" IsReadOnly="True" />
                <DataGridTextColumn Header="Word" Width="*"
                                    Binding="{Binding CorrectSpelling, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left">
            <Button Content="Submit" Padding="12,2" Margin="0,0,8,0" Command="{Binding CheckSpellingCommand}"
                    Background="{Binding Theme.ButtonBackgroundColor}"
                    Foreground="{Binding Theme.ButtonForegroundColor}" />
            <Button Content="Save" Padding="12,2" Margin="0,0,8,0" Command="{Binding SaveCommand}"
                    Background="{Binding Theme.ButtonBackgroundColor}"
                    Foreground="{Binding Theme.ButtonForegroundColor}" />
            <TextBlock Text="{Binding SpellingSummary}" VerticalAlignment="Center" 
                       Foreground="{Binding Theme.ForegroundColor}" />
        </StackPanel>
    </Grid>
</UserControl>

