<UserControl x:Class="WpfAppCvoca.Views.Steps.Step0ShowAllView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 상단 툴바: Step 제목 + 오디오 컨트롤 -->
        <Grid Grid.Row="0" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="{Binding StepHeaderText}" Style="{StaticResource SectionTitleText}" VerticalAlignment="Center" />
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <Button Content="Play Audio" Style="{StaticResource ToolbarBtn}"/>
                <Button Content="Stop" Style="{StaticResource ToolbarBtn}"/>
            </StackPanel>
        </Grid>

        <!-- 본문: Spelling 입력 그리드 -->
        <DataGrid x:Name="SpellingDataGrid" Grid.Row="1" Style="{StaticResource SubDataGrid}" ItemsSource="{Binding SpellingItems}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Word ID" Width="70" Binding="{Binding WordId}" IsReadOnly="True" />
                <DataGridTextColumn Header="Word" Width="*" Binding="{Binding CorrectSpelling, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- 하단 툴바: 채점/저장 + 요약 -->
        <StackPanel Grid.Row="2" Style="{StaticResource StatusbarPanel}">
            <Button Content="Submit" Style="{StaticResource StatusbarBtn}" Command="{Binding CheckSpellingCommand}"/> 
            <Button Content="Save" Style="{StaticResource StatusbarBtn}" Command="{Binding SaveCommand}"/>
            <TextBlock Text="{Binding SpellingSummary}" Style="{StaticResource CaptionText}" />
        </StackPanel>
    </Grid>
</UserControl>

