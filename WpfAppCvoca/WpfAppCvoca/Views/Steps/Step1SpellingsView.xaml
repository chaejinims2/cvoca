<UserControl x:Class="WpfAppCvoca.Views.Steps.Step1SpellingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="{Binding StepHeaderText}" FontWeight="Bold" FontSize="13" VerticalAlignment="Center"
                       Foreground="{Binding Theme.ForegroundColor}" />
            <Border Width="12" />
            <Button Content="Play Audio" Padding="8,2" Margin="0,0,4,0" VerticalAlignment="Center"
                    Background="{Binding Theme.ButtonBackgroundColor}"
                    Foreground="{Binding Theme.ButtonForegroundColor}" />
            <Button Content="Stop" Padding="8,2" VerticalAlignment="Center"
                    Background="{Binding Theme.ButtonBackgroundColor}"
                    Foreground="{Binding Theme.ButtonForegroundColor}" />
        </StackPanel>

        <DataGrid x:Name="SpellingDataGrid" Grid.Row="1" Margin="0,0,0,8"
                  AutoGenerateColumns="False" IsReadOnly="False"
                  CanUserAddRows="False" CanUserDeleteRows="False"
                  ItemsSource="{Binding SpellingItems}"
                  Background="{Binding Theme.DataGridBackgroundColor}"
                  Foreground="{Binding Theme.DataGridForegroundColor}"
                  RowBackground="{Binding Theme.DataGridRowBackgroundColor}"
                  AlternatingRowBackground="{Binding Theme.DataGridRowBackgroundColor}">
            <DataGrid.Resources>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="{Binding DataContext.Theme.DataGridRowBackgroundColor, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                    <Setter Property="Foreground" Value="{Binding DataContext.Theme.DataGridForegroundColor, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                </Style>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="{Binding DataContext.Theme.DataGridHeaderBackgroundColor, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                    <Setter Property="Foreground" Value="{Binding DataContext.Theme.DataGridHeaderForegroundColor, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                </Style>
                <Style TargetType="ScrollBar">
                    <Setter Property="Background" Value="{Binding DataContext.Theme.ScrollBarBackgroundColor, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                    <Style.Resources>
                        <Style TargetType="Thumb">
                            <Setter Property="Background" Value="{Binding DataContext.Theme.ScrollBarThumbColor, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{Binding DataContext.Theme.ScrollBarThumbHoverColor, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Style.Resources>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="#" Width="40" Binding="{Binding WordNo}" IsReadOnly="True" />
                <DataGridTextColumn Header="Your Spelling" Width="*"
                                    Binding="{Binding UserSpelling, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <DataGridTextColumn Header="Correct" Width="*"
                                    Binding="{Binding CorrectSpelling, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <DataGridTextColumn Header="Result" Width="60" Binding="{Binding ResultMark}" IsReadOnly="True" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left">
            <Button Content="채점" Padding="12,2" Margin="0,0,8,0" Command="{Binding CheckSpellingCommand}"
                    Background="{Binding Theme.ButtonBackgroundColor}"
                    Foreground="{Binding Theme.ButtonForegroundColor}" />
            <Button Content="저장" Padding="12,2" Margin="0,0,8,0" Command="{Binding SaveCommand}"
                    Background="{Binding Theme.ButtonBackgroundColor}"
                    Foreground="{Binding Theme.ButtonForegroundColor}" />
            <TextBlock Text="{Binding SpellingSummary}" VerticalAlignment="Center" 
                       Foreground="{Binding Theme.ForegroundColor}" />
        </StackPanel>
    </Grid>
</UserControl>
