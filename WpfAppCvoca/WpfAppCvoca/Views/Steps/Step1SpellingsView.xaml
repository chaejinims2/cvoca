<UserControl x:Class="WpfAppCvoca.Views.Steps.Step1SpellingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 상단 툴바: Step 제목 + 오디오 컨트롤 -->
        <StackPanel Grid.Row="0" Style="{StaticResource ToolbarPanel}">
            <TextBlock Text="{Binding StepHeaderText}" Style="{StaticResource SectionTitleText}" />
            <Border Width="12" />
            <Button Content="Play Audio" />
            <Button Content="Stop" />
        </StackPanel>

        <!-- 본문: Spelling 입력 그리드 -->
        <DataGrid x:Name="SpellingDataGrid" Grid.Row="1" Style="{StaticResource SubDataGrid}" ItemsSource="{Binding SpellingItems}" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="#" Width="40" Binding="{Binding WordNo}" IsReadOnly="True" />
                <DataGridTextColumn Header="Your Spelling" Width="*" Binding="{Binding UserSpelling, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <DataGridTextColumn Header="Correct" Width="*" Binding="{Binding CorrectSpelling, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <DataGridTextColumn Header="Result" Width="60" Binding="{Binding ResultMark}" IsReadOnly="True" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- 하단 툴바: 채점/저장 + 요약 -->
        <StackPanel Grid.Row="2" Style="{StaticResource StatusbarPanel}">
            <Button Content="Submit" Style="{StaticResource StatusbarBtn}" Command="{Binding CheckSpellingCommand}"/> 
            <Button Content="Save" Style="{StaticResource StatusbarBtn}" Command="{Binding SaveCommand}"/>
            <TextBlock Text="{Binding SpellingSummary}" Style="{StaticResource CaptionText}" />
        </StackPanel>
    </Grid>
</UserControl>