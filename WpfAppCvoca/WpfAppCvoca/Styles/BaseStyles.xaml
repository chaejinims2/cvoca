<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- ========== Base Button Style ========== -->
    <Style TargetType="Button">
        <Setter Property="Margin" Value="4,0,0,0" /> <!-- 좌측 마진 4, 상하 마진 0 -->
        <Setter Property="Padding" Value="10,3" /> <!-- 좌우 패딩 10, 상하 패딩 3 -->
        <Setter Property="FontSize" Value="12" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Background" Value="{Binding DataContext.Theme.ButtonBackgroundColor, RelativeSource={RelativeSource AncestorType=Window}}" />
        <Setter Property="Foreground" Value="{Binding DataContext.Theme.ButtonForegroundColor, RelativeSource={RelativeSource AncestorType=Window}}" />
    </Style>

    <!-- ========== Base ToggleButton Style ========== -->
    <Style TargetType="ToggleButton">
        <Setter Property="Margin" Value="4,0,0,0" />
        <Setter Property="Padding" Value="10,3" /> <!-- 좌우 패딩 10, 상하 패딩 3 -->
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="MinWidth" Value="0" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Background" Value="{Binding DataContext.Theme.ToggleButtonBackgroundColor, RelativeSource={RelativeSource AncestorType=Window}}" />
        <Setter Property="Foreground" Value="{Binding DataContext.Theme.ToggleButtonForegroundColor, RelativeSource={RelativeSource AncestorType=Window}}" />
    </Style>

    <!-- ========== Base Grid Style ========== -->
    <Style TargetType="Grid">
        <Setter Property="Background" Value="{Binding DataContext.Theme.BackgroundColor, RelativeSource={RelativeSource AncestorType=Window}}" />
    </Style>

    <!-- ========== Base DataGrid Style ========== -->
    <Style TargetType="DataGrid">
        <Setter Property="AutoGenerateColumns" Value="False" />
        <Setter Property="CanUserAddRows" Value="False" />
        <Setter Property="CanUserDeleteRows" Value="False" />
        <Setter Property="GridLinesVisibility" Value="None" />
        <Setter Property="HeadersVisibility" Value="All" />
        <Setter Property="ColumnHeaderHeight" Value="32" />
        <Setter Property="RowHeight" Value="30" />
        <Setter Property="Margin" Value="0,0,0,8" />
        <Setter Property="AlternatingRowBackground" Value="{Binding DataContext.Theme.DataGridRowBackgroundColor, RelativeSource={RelativeSource AncestorType=Window}}" />
        <Setter Property="RowBackground" Value="{Binding DataContext.Theme.DataGridRowBackgroundColor, RelativeSource={RelativeSource AncestorType=Window}}" />
        <Setter Property="Background" Value="{Binding DataContext.Theme.DataGridBackgroundColor, RelativeSource={RelativeSource AncestorType=Window}}" />
        <Setter Property="Foreground" Value="{Binding DataContext.Theme.DataGridForegroundColor, RelativeSource={RelativeSource AncestorType=Window}}" />
    </Style>

    <!-- ========== Base DataGridRow Style ========== -->
    <Style TargetType="DataGridRow">
        <Setter Property="Padding" Value="6,0" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="BorderBrush" Value="{Binding DataContext.Theme.BorderColor, RelativeSource={RelativeSource AncestorType=UserControl}}" />
        <Setter Property="Background" Value="{Binding DataContext.Theme.DataGridRowBackgroundColor, RelativeSource={RelativeSource AncestorType=UserControl}}" />
        <Setter Property="Foreground" Value="{Binding DataContext.Theme.DataGridForegroundColor, RelativeSource={RelativeSource AncestorType=UserControl}}" />
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{Binding DataContext.Theme.AccentColor, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                <Setter Property="Foreground" Value="White" />
            </Trigger>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="Background" Value="{Binding DataContext.Theme.DataGridRowBackgroundColor, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                <Setter Property="Foreground" Value="{Binding DataContext.Theme.DataGridForegroundColor, RelativeSource={RelativeSource AncestorType=UserControl}}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ========== Base DataGridColumnHeader Style ========== -->
    <Style TargetType="DataGridColumnHeader">
        <Setter Property="Background" Value="{Binding DataContext.Theme.DataGridHeaderBackgroundColor, RelativeSource={RelativeSource AncestorType=UserControl}}" />
        <Setter Property="Foreground" Value="{Binding DataContext.Theme.DataGridHeaderForegroundColor, RelativeSource={RelativeSource AncestorType=UserControl}}" />
    </Style>

    <!-- ========== Base DataGridCell Style ========== -->
    <Style TargetType="DataGridCell">
        <Setter Property="Foreground" Value="{Binding DataContext.Theme.DataGridForegroundColor, RelativeSource={RelativeSource AncestorType=UserControl}}" />
        <Setter Property="Background" Value="Transparent" />
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Foreground" Value="White" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ========== DataGridTextColumn ElementStyle ========== -->
    <Style x:Key="DataGridTextColumnElementStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{Binding Foreground, RelativeSource={RelativeSource AncestorType=DataGridCell}}" />
    </Style>

    <!-- ========== DataGridTextColumn EditingElementStyle ========== -->
    <Style x:Key="DataGridTextColumnEditingElementStyle" TargetType="TextBox">
        <Setter Property="Foreground" Value="{Binding DataContext.Theme.DataGridForegroundColor, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="0" />
    </Style>

    <!-- ========== Base DataGridTextColumn Style ========== -->
    <Style TargetType="DataGridTextColumn">
        <Setter Property="ElementStyle" Value="{StaticResource DataGridTextColumnElementStyle}" />
        <Setter Property="EditingElementStyle" Value="{StaticResource DataGridTextColumnEditingElementStyle}" />
    </Style>

    <!-- ========== Base Border Style ========== -->
    <Style TargetType="Border">
        <!-- 기본 Border 스타일 (필요시 속성 추가) -->
    </Style>

</ResourceDictionary>

